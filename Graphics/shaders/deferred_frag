#version 330 core

in Data
{
	vec3 color;
	vec2 texCoord;
}FSIn;


out vec4 outColor;

uniform sampler2D tex;
uniform sampler2D normalMap;

void main(void)
{
    vec3 dir = vec3(1,1,0);


    vec3 color = texture(tex, FSIn.texCoord).rgb;
    vec3 normal = texture(normalMap, FSIn.texCoord).rgb;
    outColor = vec4(color * dot(normal,dir),1);
}
