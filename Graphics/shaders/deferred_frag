#version 330 core

in Data
{
	vec3 color;
	vec2 texCoord;
}FSIn;


out vec4 outColor;

uniform sampler2D colorTex;
uniform sampler2D normalMap;

void main(void)
{
    vec3 dir = vec3(1,1,1);


    vec3 color = texture(colorTex, FSIn.texCoord).rgb;
    vec3 normal = texture(normalMap, FSIn.texCoord).rgb * 2 -1;
    vec3 intensity = vec3(dot(normal,dir));
    outColor = vec4(color * intensity * 10,1);
}
