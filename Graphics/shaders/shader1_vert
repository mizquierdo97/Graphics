#version 330 core 

layout(location = 0) in vec3 position;
layout(location = 1) in vec3 color;

uniform mat4x4 _Model;
uniform mat4x4 _View;
uniform mat4x4 _Projection;

out Data
{
	vec3 color;
} VSOut;

void main(void)
{
gl_Position = _Projection * _View * _Model * vec4(position, 1);
VSOut.color = color;
}